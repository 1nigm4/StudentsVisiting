<Page x:Class="StudentsVisiting.Views.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentsVisiting.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label Content="Логин"/>
        <TextBox Name="Login" Text="admin" MinWidth="240"/>
        <Label Content="Пароль"/>
        <PasswordBox Name="Pass" Password="admin" MinWidth="240"/>
        <Button Content="Авторизироваться" Click="Auth_OnClick" Margin="0 10 0 0"/>
    </StackPanel>
</Page>
